@import url('https://fonts.googleapis.com/css?family=Red+Hat+Display|Roboto+Mono:500&display=swap');

body
  // Baseline Material-UI font treatment. We define it here as well,
  // because we otherwise get FOUT when hard-refreshing a page with
  // markdown->html set via `dangerouslySetInnerHtml` (e.g., one of the
  // product or team pages.
  color rgba(0, 0, 0, 0.87)
  font-size 0.875rem
  font-family "Red Hat Display", sans-serif
  font-weight 400
  line-height 1.5
  letter-spacing: 0.01071em

  h1, h2
    font-weight 900

  #logo
    background-color #fff
    &:hover
      background-color #eee
    #logoIcon
      background-color #f00
      color #fff

  a
    text-decoration none

  button
    a
      color #fff

  footer
    text-align center
